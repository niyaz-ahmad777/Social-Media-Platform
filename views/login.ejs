<%- include("partials/header", { title: "Login • MiniSocial" }) %>

<form class="auth" method="POST" action="/login">
  <h1>Welcome Back</h1>
  <p class="muted">Sign in to your account</p>
  
  <% if (error) { %>
    <div class="error" style="margin-bottom:14px">
      <strong>⚠️ Error:</strong> <%= error %>
    </div>
  <% } %>
  
  <div style="margin:18px 0">
    <label for="email" style="display:block;margin:0 0 6px;font-weight:600">Email Address</label>
    <input id="email" name="email" type="email" required/>
  </div>
  
  <div style="margin:18px 0">
    <label for="password" style="display:block;margin:0 0 6px;font-weight:600">Password</label>
    <input id="password" name="password" type="password" required/>
  </div>
  
  <button class="btn primary" type="submit" style="width:100%;margin:24px 0;padding:12px">Sign In</button>
  
  <p class="muted" style="text-align:center">Don't have account? <a href="/register" style="color:var(--primary);font-weight:600">Create one</a></p>
</form>

<%- include("partials/footer") %>
