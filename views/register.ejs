<%- include("partials/header", { title: "Register • MiniSocial" }) %>

<form class="auth" method="POST" action="/register">
  <h1>Join Us</h1>
  <p class="muted">Create your account to get started</p>
  
  <% if (error) { %>
    <div class="error" style="margin-bottom:14px">
      <strong>⚠️ Error:</strong> <%= error %>
    </div>
  <% } %>
  
  <div style="margin:18px 0">
    <label for="name" style="display:block;margin:0 0 6px;font-weight:600">Full Name</label>
    <input id="name" name="name" required/>
  </div>
  
  <div style="margin:18px 0">
    <label for="username" style="display:block;margin:0 0 6px;font-weight:600">Username</label>
    <input id="username" name="username" required/>
  </div>
  
  <div style="margin:18px 0">
    <label for="email" style="display:block;margin:0 0 6px;font-weight:600">Email Address</label>
    <input id="email" name="email" type="email" required/>
  </div>
  
  <div style="margin:18px 0">
    <label for="password" style="display:block;margin:0 0 6px;font-weight:600">Password</label>
    <input id="password" name="password" type="password" minlength="6" required/>
    <p class="muted" style="margin:6px 0 0;font-size:12px">Minimum 6 characters</p>
  </div>
  
  <button class="btn primary" type="submit" style="width:100%;margin:24px 0;padding:12px">Create Account</button>
  
  <p class="muted" style="text-align:center">Already have account? <a href="/login" style="color:var(--primary);font-weight:600">Sign in</a></p>
</form>

<%- include("partials/footer") %>
